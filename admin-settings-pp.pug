                li
                  a.active(href="admin-settings-pp.html") Passoword Policy
                //- li
              //- ul
            //- nav
          //- col
          .col-md-9.nav-lvl-2.full
            .row
              .col-md-6
                .form-group
                  label Enforce Password Policy
                  input.form-control(type="text")
                //- form-group
              //- col
              .col-md-6
                .form-group
                  label Password Age
                  .form-horizontal
                    .form-group
                      .col-xs-4
                        input.form-control(type="text", placeholder="min")
                      //- col
                      .col-xs-4
                        input.form-control(type="text", placeholder="max")
                      //- col
                    //- form-group
                  //- form-inline
                //- form-group
              //- col
            //- row
            hr
            .row
              .col-md-6
                p.lead Complexity Requirements
                .form-group
                  label Number of Characters
                  .form-horizontal
                    .form-group
                      .col-xs-4
                        input.form-control(type="text", placeholder="min")
                      //- col
                      .col-xs-4
                        input.form-control(type="text", placeholder="max")
                      //- col
                    //- form-group
                  //- form-inline
                //- form-group
              //- col
              .col-md-12
                hr
                ul.list-group
                  li.list-group-item
                    label.switch.rounded.pull-right
                      input(type='checkbox')
                      span
                    //- label
                    | Special Characters
                  //- li
                  li.list-group-item
                    label.switch.rounded.pull-right
                      input(type='checkbox', checked)
                      span
                    //- label
                    | Lowercase Letters
                  //- li
                  li.list-group-item
                    label.switch.rounded.pull-right
                      input(type='checkbox')
                      span
                    //- label
                    | Uppercase Letters
                  //- li
                  li.list-group-item
